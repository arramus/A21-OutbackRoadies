<configs>

	<append xpath="/ui_display_info/item_display">

		<item_display_info display_type="foodCureInfectionAndFood" display_group="groupConsumables">
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name=".foodStaminaBonusAdd" title_key="statFoodStaminaBonus"/>
			<display_entry name="dCureInfection" title_key="statCureInfection" display_type="Percent"/>
		</item_display_info>
		
		<item_display_info display_type="foodCureInfectionAndFoodWater" display_group="groupConsumables">
			<display_entry name="$foodAmountAdd" title_key="statFoodAmount"/>
			<display_entry name="foodHealthAmount" title_key="statHealthAmount"/>
			<display_entry name="$waterAmountAdd" title_key="statWaterAmount"/>
			<display_entry name=".foodStaminaBonusAdd" title_key="statFoodStaminaBonus"/>
			<display_entry name="dCureInfection" title_key="statCureInfection" display_type="Percent"/>
		</item_display_info>
	
	</append>
	
	<append xpath="/ui_display_info/crafting_category_display">
		
		<crafting_category_list display_type="AmmoPress">
			<crafting_category name="Ammo/Weapons" icon="ui_game_symbol_ammopress" display_name="lblCategoryAmmoPress" />
			<crafting_category name="RegularAmmo" icon="ui_game_symbol_ammopress_regularammo" display_name="lblCategoryAmmoPressRegularAmmo"/>
			<crafting_category name="HPAmmo" icon="ui_game_symbol_ammopress_hpammo" display_name="lblCategoryAmmoPressHPAmmo"/>
			<crafting_category name="APAmmo" icon="ui_game_symbol_ammopress_apammo" display_name="lblCategoryAmmoPressAPAmmo"/>
		</crafting_category_list>
	
	</append>
	
</configs>